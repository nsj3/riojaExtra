if(!exists("meta") || is.null(meta)) meta <- packageDescription("riojaExtra")

citHeader("To cite package 'riojaExtra' in publications use:")

citEntry(entry="Manual",
	title ="riojaExtra: Additional Functions for the rioja Package",
	author = personList(as.person("Steve Juggins")),
	year = 2017,
	note = paste("R package version", meta$Version))
)
